{
  "name": "gpt5-hackathon",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "build": "tsc -p tsconfig.json",
    "build:web": "npm --prefix web run build",
    "build:all": "npm run build:web && npm run build",
    "start": "node dist/server.js",
    "start:prod": "npm run build:all && npm start",
    "format": "echo 'add formatter later'",
    "validate:grammar": "python3 scripts/validate_grammar.py"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "openai": "^5.12.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.1"
  }
}
